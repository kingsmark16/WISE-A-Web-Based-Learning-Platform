// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  
}

model User {
  id           String    @id @default(ulid())
  clerkId      String    @unique
  fullName     String?
  emailAddress String    @unique
  imageUrl     String?
  role         Role      @default(STUDENT)
  createdAt    DateTime  @default(now())
  lastActiveAt DateTime @default(now())

  createdCourses Course[] @relation("CourseCreator")
  managedCourses Course[] @relation("CourseFaculty")

  dailyActivities     DailyUserActivity[]
  enrollments      Enrollment[]
  completions      CourseCompletion[]
  certificates     Certificate[]
  
  quizSubmissions  QuizSubmission[]
  lessonProgress   LessonProgress[] @relation("StudentLessonProgress")
  courseProgress   CourseProgress[] @relation("StudentCourseProgress")
  moduleProgress   ModuleProgress[] @relation("StudentModuleProgress")

  forumPosts       ForumPost[]
  forumReplies     ForumReply[]
  forumPostLikes   ForumPostLike[]
}

enum CourseStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model DailyUserActivity {
  id       String   @id @default(ulid())
  userId   String
  date     DateTime @db.Date
  user     User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, date])
}
model Course {
  id          String    @id @default(ulid())
  title       String
  description String?
  thumbnail   String?
  college    String
  status      CourseStatus @default(DRAFT)
  code        String?   @unique
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  certificateEnabled Boolean @default(false)

  createdById String
  createdBy   User      @relation("CourseCreator", fields: [createdById], references: [id], onDelete: Cascade)

  facultyId   String?
  managedBy   User?     @relation("CourseFaculty", fields: [facultyId], references: [id], onDelete: SetNull)

  
  enrollments        Enrollment[]
  
  // Course content
  modules            Module[]
  
  // Completion tracking
  completions        CourseCompletion[]
  certificates       Certificate[]
  courseProgress     CourseProgress[] @relation("CourseProgress")
  
  // Forum
  forumPosts         ForumPost[]

  @@index([createdById])
  @@index([facultyId])
  @@index([college])
}

model Module {
  id          String    @id @default(ulid())
  title       String
  description String?
  position    Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  courseId    String
  course      Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)

  lessons Lesson[]
  links   Link[]
  quiz         Quiz?
  moduleProgress ModuleProgress[]

  @@unique([courseId, position])
  @@index([courseId])
}

model Lesson {
  id          String   @id @default(ulid())
  title       String
  description String?
  thumbnail   String?
  youtubeId   String?
  dropboxPath String?
  storageKey  String?
  type        LessonType
  url         String
  position    Int
  duration    Int?

  moduleId    String
  module      Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  lessonProgress LessonProgress[]

  @@unique([moduleId, position])
  @@index([moduleId])
}


model Link {
  id          String   @id @default(ulid())
  title       String
  description String?
  url         String
  position    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  moduleId    String
  module      Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  @@unique([moduleId, position])
  @@index([moduleId])
}


model Quiz {
  id          String   @id @default(ulid())
  title       String
  description String?
  isPublished Boolean  @default(false)
  timeLimit   Int?     @default(0)
  attemptLimit Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  moduleId    String   @unique
  module      Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)

  questions    QuizQuestion[]
  submissions  QuizSubmission[]
}

model QuizQuestion {
  id            String           @id @default(ulid())
  question      String
  type          QuestionType
  options       String[]
  correctAnswer String
  points        Int              @default(1)
  position      Int
  quizId        String
  quiz          Quiz             @relation(fields: [quizId], references: [id], onDelete: Cascade)
  
  answers       QuizAnswer[]

  @@unique([quizId, position])
  @@index([quizId])
}

model QuizSubmission {
  id        String   @id @default(ulid())
  score     Int?
  timeSpent Int?     // in seconds
  startedAt DateTime @default(now())
  endedAt   DateTime?
  
  studentId String
  student   User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  
  quizId    String
  quiz      Quiz     @relation(fields: [quizId], references: [id], onDelete: Cascade)
  
  answers   QuizAnswer[]

  @@index([studentId])
  @@index([quizId])
}

model QuizAnswer {
  id             String   @id @default(ulid())
  answer         String
  isCorrect      Boolean?
  
  submissionId   String
  submission     QuizSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  
  questionId     String
  question       QuizQuestion   @relation(fields: [questionId], references: [id], onDelete: Cascade)

  @@unique([submissionId, questionId])
  @@index([submissionId])
  @@index([questionId])
}


// Forum models
model ForumPost {
  id          String      @id @default(ulid())
  title       String
  content     String
  category    String?
  likes      Int         @default(0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  isPinned    Boolean     @default(false)
  isLocked    Boolean     @default(false)
  
  courseId    String
  course      Course      @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  authorId    String
  author      User        @relation(fields: [authorId], references: [id], onDelete: Cascade)
  
  replies     ForumReply[]
  likedBy     ForumPostLike[]

  @@index([courseId])
  @@index([authorId])
  @@index([createdAt])
}

model ForumReply {
  id          String      @id @default(ulid())
  content     String
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  
  postId      String
  post        ForumPost   @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  authorId    String
  author      User        @relation(fields: [authorId], references: [id], onDelete: Cascade)

  @@index([postId])
  @@index([authorId])
  @@index([createdAt])
}

model ForumPostLike {
  id          String      @id @default(ulid())
  createdAt   DateTime    @default(now())
  
  postId      String
  post        ForumPost   @relation(fields: [postId], references: [id], onDelete: Cascade)
  
  userId      String
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([postId, userId])
  @@index([postId])
  @@index([userId])
}

// Course completion and certification
model CourseCompletion {
  id               String   @id @default(ulid())
  completedAt      DateTime @default(now())
  
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  courseId         String
  course           Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  certificate      Certificate?

  @@unique([userId, courseId])
  @@index([userId])
  @@index([courseId])
}

model Certificate {
  id               String   @id @default(ulid())
  certificateNumber String  @unique
  issueDate        DateTime @default(now())
  certificateUrl   String?
  
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  courseId         String
  course           Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  
  completionId     String   @unique
  completion       CourseCompletion @relation(fields: [completionId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([courseId])
  @@index([certificateNumber])
}


model Enrollment {
  id String @id @default(ulid())
  studentId String
  courseId String
  enrolledAt DateTime @default(now())

  student User @relation(fields: [studentId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@unique([studentId, courseId])
  @@index([studentId])
  @@index([courseId])
}

// Progress Tracking
model LessonProgress {
  id          String   @id @default(ulid())
  studentId   String
  student     User     @relation("StudentLessonProgress", fields: [studentId], references: [id], onDelete: Cascade)

  lessonId    String
  lesson      Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  isCompleted Boolean  @default(false)
  progress    Int      @default(0)  // 0-100 percentage
  viewCount   Int      @default(0)  // how many times accessed
  startedAt   DateTime @default(now())
  completedAt DateTime?
  lastAccessedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([studentId, lessonId])
  @@index([studentId])
  @@index([lessonId])
}

model CourseProgress {
  id          String   @id @default(ulid())
  studentId   String
  student     User     @relation("StudentCourseProgress", fields: [studentId], references: [id], onDelete: Cascade)
  
  courseId    String
  course      Course   @relation("CourseProgress", fields: [courseId], references: [id], onDelete: Cascade)
  
  progressPercentage  Int      @default(0)  // 0-100
  lessonsCompleted    Int      @default(0)
  quizzesCompleted    Int      @default(0)
  currentModuleId     String?  // track which module student is currently on
  lastAccessedAt      DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@unique([studentId, courseId])
  @@index([studentId])
  @@index([courseId])
}

model ModuleProgress {
  id          String   @id @default(ulid())
  studentId   String
  student     User     @relation("StudentModuleProgress", fields: [studentId], references: [id], onDelete: Cascade)
  
  moduleId    String
  module      Module   @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  
  progressPercentage  Int      @default(0)  // 0-100
  lessonsCompleted    Int      @default(0)
  quizCompleted       Boolean  @default(false)
  quizScore           Int?     // best score achieved
  isCompleted         Boolean  @default(false)
  completedAt         DateTime?
  lastAccessedAt      DateTime @default(now())
  updatedAt           DateTime @updatedAt

  @@unique([studentId, moduleId])
  @@index([studentId])
  @@index([moduleId])
}

model DropboxToken {
  id          String   @id @default(ulid())
  access_token String
  refresh_token String?
  expires_at  DateTime?
  updatedAt   DateTime @updatedAt
}

enum Role {
  ADMIN
  FACULTY
  STUDENT
}

enum QuestionType {
  MULTIPLE_CHOICE
  TRUE_FALSE
  ENUMERATION
}

enum LessonType {
  PDF
  YOUTUBE
  DROPBOX
}